<!--NOVEDADES-->
<div class="container px-4 py-5">
  <h2 id="novedades" class="titulo pb-3 border-bottom">Novedades</h2>
  <div class="row justify-content-center g-4 py-4">
    {{#each novedades}}
    <div class="col-md-5">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-primary">{{ubicacion}}</strong>
          <h3 class="mb-0" style="font-family:'Spectral', serif; font-size: 30px; font-weight: bold;">{{titulo}}</h3>
          <div class="mb-1 text-muted" style="font-family:'Lato', sans-serif;">{{fecha}}</div>
          <p class="card-text mb-auto" style="font-family: 'Lato', sans-serif; font-size: 15px;">{{subtitulo}}.</p>
          <a href="javascript:void(0)" class="card-link" data-bs-toggle="modal" data-bs-target="#modal{{ id }}" style="font-family: 'Lato', sans-serif; font-size: 15px;">
          Continuar...
          </a>
        </div>
        <div class="col-auto d-none d-lg-block">
          <img src="{{imagen}}" class="img-fluid rounded-end" alt="..." width="200" height="250">
        </div>
      </div>
    </div>
    {{/each}}
  </div>
{{#each novedades}}
<div class="modal fade" id="modal{{id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header" style="background-color: #0B005D;">
        <h5 class="modal-title" id="staticBackdropLabel" style="font-family:'Spectral', serif; font-size: 30px; font-weight: bold; color:aliceblue">{{titulo}}</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close">
        </button>
        </div>
        <div class="modal-body">
        <h5 style="font-family: 'Lato', sans-serif; font-size: 25px; font-weight: bold; text-align: center;">{{subtitulo}}</h5>
        <img src="{{imagen}}" alt="{{titulo}}" />
        <p style="font-family: 'Lato', sans-serif; font-size: 19px;">{{cuerpo}}</p>
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>

