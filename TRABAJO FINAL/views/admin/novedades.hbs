<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}</span>
                <a href="/admin/login/logout" class="btn btn-danger"> Cerrar sessión</a>
            </p>
        </div>
    </div>
<div class="row">
  <div class="col-7">
    <h2>NOVEDADES</h2>
  </div>
  <div class="col-2">
      <a href="/admin/novedades/agregar" class="btn btn-outline-success"><i class="fa fa-plus"></i> Nuevo</a>
    </div>
  </div>
  <div class="row">
      <div class="col">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Fecha</th>
              <th scope="col">Lugar</th>
              <th scope="col">Título</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each novedades}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{fecha}}</td>
              <td>{{ubicacion}}</td>
              <td>{{titulo}}</td>
              <td>
                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secundary">
                  <i class="fa fa-pencil"></i></a>
                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secundary">
                  <i class="fa fa-trash"></i></a>
              </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
</div>