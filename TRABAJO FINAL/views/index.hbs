<!--EVENTOS-->
<div class="container px-4 py-5">
  <h2 id="evento" class="pb-3 border-bottom text-center">Eventos</h2>
  <div class="row justify-content-center g-4 py-4">
    {{#each novedades}}
    <div class="col-md-5">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-primary">{{ubicacion}}</strong>
          <h3 class="mb-0">{{titulo}}</h3>
          <div class="mb-1 text-muted">{{fecha}}</div>
          <p class="card-text mb-auto">{{subtitulo}}.</p>
          <a href="javascript:void(0)" class="card-link" data-bs-toggle="modal" data-bs-target="#modal{{ id }}">
          Continuar...
          </a>
        </div>
        <div class="col-auto d-none d-lg-block">
          <img src="{{imagen}}" class="img-fluid rounded-end" alt="..." width="250" height="200">
        </div>
      </div>
    </div>
    {{/each}}
  </div>
{{#each novedades}}
<div class="modal fade" id="modal{{id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">{{titulo}}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        </button>
        </div>
        <div class="modal-body">
        <h4>{{subtitulo}}</h4>
        <img src="{{imagen}}" alt="{{titulo}}" />
        <p>{{cuerpo}}</p>
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>

